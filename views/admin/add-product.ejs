<!DOCTYPE html>
<html lang="en">

<head>
    <title>Add Product</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-br from-gray-100 to-gray-200 min-h-screen">

    <!-- Admin Navbar -->
    <%- include('nav') %>

        <!-- Page Wrapper -->
        <div class="flex justify-center items-start mt-14 px-4">

            <div class="w-full max-w-3xl bg-white rounded-2xl shadow-xl p-8">

                <!-- Header -->
                <div class="mb-8 border-b pb-4">
                    <h2 class="text-3xl font-bold text-gray-800">
                        ➕ Add New Product
                    </h2>
                    <p class="text-gray-500 mt-1">
                        Fill in the product details below
                    </p>
                </div>

                <!-- Form -->
                <form method="POST" action="/admin/add-product" class="space-y-6">

                    <!-- Product Name -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Product Name
                        </label>
                        <input type="text" name="name" required
                            class="w-full rounded-xl border px-4 py-3 focus:ring-2 focus:ring-indigo-500 focus:outline-none"
                            placeholder="e.g. Wireless Headphones">
                    </div>

                    <!-- Price -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Price (₹)
                        </label>
                        <input type="number" name="price" required
                            class="w-full rounded-xl border px-4 py-3 focus:ring-2 focus:ring-indigo-500 focus:outline-none"
                            placeholder="e.g. 2999">
                    </div>

                    <!-- Description -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Description
                        </label>
                        <textarea name="description" rows="4"
                            class="w-full rounded-xl border px-4 py-3 focus:ring-2 focus:ring-indigo-500 focus:outline-none"
                            placeholder="Short product description..."></textarea>
                    </div>

                    <!-- Image URL -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Image URL
                        </label>
                        <input type="text" name="image"
                            class="w-full rounded-xl border px-4 py-3 focus:ring-2 focus:ring-indigo-500 focus:outline-none"
                            placeholder="https://example.com/product.jpg">
                    </div>

                    <!-- Actions -->
                    <div class="flex justify-between items-center pt-6 border-t">

                        <a href="/admin" class="text-gray-600 hover:text-indigo-600 font-medium transition">
                            ← Back to Dashboard
                        </a>

                        <button type="submit"
                            class="bg-indigo-600 text-white px-8 py-3 rounded-xl font-semibold hover:bg-indigo-700 transition shadow-md">
                            Add Product
                        </button>

                    </div>

                </form>

            </div>
        </div>

</body>

</html>