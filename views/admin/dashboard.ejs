<!DOCTYPE html>
<html lang="en">

<head>
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50 min-h-screen">

    <!-- Navbar -->
    <%- include('nav') %>

        <!-- Main Container -->
        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

            <!-- Header & Actions -->
            <div class="flex flex-col md:flex-row md:justify-between md:items-center gap-4 mb-8">
                <div>
                    <h2 class="text-3xl font-extrabold text-gray-800">
                        üõ† Admin Dashboard
                    </h2>
                    <p class="text-gray-500 text-sm">
                        Manage products and orders
                    </p>
                </div>

                <div class="flex gap-3 flex-wrap">
                    <a href="/admin/orders"
                        class="bg-gray-700 text-white px-5 py-2.5 rounded-xl hover:bg-gray-800 transition font-semibold">
                        üì¶ Manage Orders
                    </a>

                    <a href="/admin/add-product"
                        class="bg-indigo-600 text-white px-5 py-2.5 rounded-xl hover:bg-indigo-700 transition font-semibold">
                        ‚ûï Add Product
                    </a>
                </div>
            </div>

            <!-- Empty State -->
            <% if (products.length===0) { %>
                <div class="bg-white rounded-xl shadow-md p-10 text-center">
                    <div class="text-5xl mb-4">üì¶</div>
                    <h3 class="text-xl font-semibold text-gray-700 mb-1">
                        No products added
                    </h3>
                    <p class="text-gray-500">
                        Start by adding your first product.
                    </p>
                </div>
                <% } %>

                    <!-- Products Grid -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">

                        <% products.forEach(p=> { %>

                            <div class="bg-white rounded-2xl shadow-sm hover:shadow-xl transition p-6">

                                <h3 class="text-xl font-bold text-gray-800 mb-2 truncate">
                                    <%= p.name %>
                                </h3>

                                <p class="text-2xl font-extrabold text-indigo-600 mb-5">
                                    ‚Çπ <%= p.price %>
                                </p>

                                <div class="flex justify-between items-center text-sm font-semibold">
                                    <a href="/admin/edit/<%= p._id %>"
                                        class="text-indigo-600 hover:text-indigo-700 transition">
                                        ‚úè Edit
                                    </a>

                                    <a href="/admin/delete/<%= p._id %>"
                                        class="text-red-500 hover:text-red-600 transition">
                                        ‚ùå Delete
                                    </a>
                                </div>

                            </div>

                            <% }) %>

                    </div>

        </main>

</body>

</html>