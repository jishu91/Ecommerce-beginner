<!DOCTYPE html>
<html lang="en">

<head>
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen">

    <!-- Navbar -->
<%- include('nav') %>

    <!-- Main Container -->
    <div class="max-w-7xl mx-auto px-6 py-8">

        <!-- Top Actions -->
        <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-6">
            <h2 class="text-3xl font-bold text-gray-800 mb-4 md:mb-0">
                Products
            </h2>

            <div class="space-x-3">
                <a href="/admin/orders" class="bg-gray-700 text-white px-4 py-2 rounded-lg hover:bg-gray-800">
                    üì¶ Manage Orders
                </a>

                <a href="/admin/add-product" class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700">
                    ‚ûï Add Product
                </a>
            </div>
        </div>

        <!-- Products Grid -->
        <% if (products.length===0) { %>
            <div class="bg-white p-6 rounded-lg shadow text-center text-gray-600">
                üö´ No products added
            </div>
            <% } %>

                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                    <% products.forEach(p=> { %>

                        <div class="bg-white rounded-xl shadow p-5 hover:shadow-lg transition">

                            <h3 class="text-xl font-semibold text-gray-800 mb-2">
                                <%= p.name %>
                            </h3>

                            <p class="text-lg font-bold text-indigo-600 mb-4">
                                ‚Çπ <%= p.price %>
                            </p>

                            <div class="flex justify-between items-center">
                                <a href="/admin/edit/<%= p._id %>" class="text-indigo-600 font-medium hover:underline">
                                    ‚úè Edit
                                </a>

                                <a href="/admin/delete/<%= p._id %>" class="text-red-500 font-medium hover:underline">
                                    ‚ùå Delete
                                </a>
                            </div>

                        </div>

                        <% }) %>
                </div>

    </div>

</body>

</html>