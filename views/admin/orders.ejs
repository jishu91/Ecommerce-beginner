<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Admin Orders</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-br from-gray-100 to-gray-200 min-h-screen">

    <!-- Admin Navbar -->
    <%- include('nav') %>

        <!-- Page Container -->
        <div class="max-w-6xl mx-auto px-4 py-10">

            <!-- Page Header -->
            <div class="mb-8">
                <h2 class="text-3xl font-bold text-gray-800">üì¶ Orders</h2>
                <p class="text-gray-500 mt-1">Manage and track customer orders</p>
            </div>

            <% if (orders.length===0) { %>
                <div class="bg-white p-8 rounded-2xl shadow text-center text-gray-500">
                    üö´ No orders found
                </div>
                <% } %>

                    <% orders.forEach(order=> { %>
                        <div class="bg-white rounded-2xl shadow-md hover:shadow-xl transition p-6 mb-8">

                            <!-- Order Header -->
                            <div class="flex flex-col md:flex-row justify-between md:items-center gap-4 mb-6">

                                <div>
                                    <p class="text-xs text-gray-500 uppercase tracking-wide">Order ID</p>
                                    <p class="font-mono text-sm text-gray-700">
                                        <%= order._id %>
                                    </p>
                                </div>

                                <span class="px-4 py-1.5 rounded-full text-sm font-semibold w-fit
                        <%= order.status === 'Delivered' ? 'bg-green-100 text-green-700' :
                            order.status === 'Shipped' ? 'bg-yellow-100 text-yellow-700' :
                            'bg-blue-100 text-blue-700' %>">
                                    <%= order.status %>
                                </span>

                            </div>

                            <!-- Order Info -->
                            <div class="grid md:grid-cols-2 gap-4 mb-6 text-sm text-gray-700">
                                <p>
                                    üë§ <strong>User:</strong>
                                    <%= order.userId.name %> (<%= order.userId.email %>)
                                </p>
                                <p>
                                    üìÖ <strong>Date:</strong>
                                    <%= order.createdAt.toDateString() %>
                                </p>
                            </div>

                            <!-- Items -->
                            <div class="bg-gray-50 border rounded-xl p-4 mb-6">
                                <h4 class="font-semibold text-gray-800 mb-3">üõí Ordered Items</h4>

                                <ul class="space-y-2 text-sm text-gray-700">
                                    <% order.items.forEach(item=> { %>
                                        <li class="flex justify-between">
                                            <span>
                                                <%= item.name %> √ó <%= item.quantity %>
                                            </span>
                                            <span class="text-gray-500">
                                                ‚Çπ <%= item.price %>
                                            </span>
                                        </li>
                                        <% }) %>
                                </ul>
                            </div>

                            <!-- Footer -->
                            <div class="flex flex-col md:flex-row justify-between md:items-center gap-4">

                                <p class="text-lg font-bold text-gray-800">
                                    üí∞ Total: ‚Çπ <%= order.totalAmount %>
                                </p>

                                <!-- Update Status -->
                                <form method="POST"
                                    action="/admin/orders/update/<%= order._id %>?page=<%= currentPage %>"
                                    class="flex gap-2 items-center">

                                    <select name="status"
                                        class="rounded-xl border px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-400">
                                        <option value="Placed" <%=order.status==='Placed' ? 'selected' : '' %>>Placed
                                        </option>
                                        <option value="Shipped" <%=order.status==='Shipped' ? 'selected' : '' %>>Shipped
                                        </option>
                                        <option value="Delivered" <%=order.status==='Delivered' ? 'selected' : '' %>
                                            >Delivered</option>
                                    </select>

                                    <button type="submit"
                                        class="bg-indigo-600 text-white px-6 py-2 rounded-xl font-semibold hover:bg-indigo-700 transition shadow">
                                        Update
                                    </button>

                                </form>
                            </div>

                        </div>
                        <% }) %>

                            <!-- Pagination -->
                            <% if (totalPages> 1) { %>
                                <div class="flex justify-center items-center gap-2 mt-12">

                                    <!-- Previous -->
                                    <% if (currentPage> 1) { %>
                                        <a href="/admin/orders?page=<%= currentPage - 1 %>"
                                            class="px-4 py-2 bg-white rounded-xl shadow hover:bg-gray-100">
                                            ‚Üê Prev
                                        </a>
                                        <% } %>

                                            <!-- Page Numbers -->
                                            <% for (let i=1; i <=totalPages; i++) { %>
                                                <a href="/admin/orders?page=<%= i %>" class="px-4 py-2 rounded-xl shadow
                       <%= i === currentPage
                            ? 'bg-indigo-600 text-white'
                            : 'bg-white hover:bg-gray-100' %>">
                                                    <%= i %>
                                                </a>
                                                <% } %>

                                                    <!-- Next -->
                                                    <% if (currentPage < totalPages) { %>
                                                        <a href="/admin/orders?page=<%= currentPage + 1 %>"
                                                            class="px-4 py-2 bg-white rounded-xl shadow hover:bg-gray-100">
                                                            Next ‚Üí
                                                        </a>
                                                        <% } %>

                                </div>
                                <% } %>

        </div>

</body>

</html>