<!DOCTYPE html>
<html lang="en">

<head>
    <title>Cart</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen">
<%- include('partials/navbar') %>

    <!-- Header -->
    <div class="max-w-6xl mx-auto px-6 py-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">üõí Your Cart</h1>

        <div class="flex justify-between items-center mb-4">
            <a href="/products" class="text-indigo-600 hover:underline">
                ‚Üê Continue Shopping
            </a>

            <a href="/orders" class="text-indigo-600 hover:underline">
                üì¶ View Orders
            </a>
        </div>

        <hr class="mb-6">
    </div>

    <!-- Cart Content -->
    <div class="max-w-6xl mx-auto px-6">

        <% if (cart.length===0) { %>
            <div class="bg-white p-6 rounded-lg shadow text-center text-gray-600">
                üòî Your cart is empty
            </div>
            <% } %>

                <% let total=0 %>

                    <div class="space-y-4">
                        <% cart.forEach(item=> { %>

                            <div class="bg-white rounded-xl shadow p-6 flex justify-between items-center">

                                <div>
                                    <h3 class="text-xl font-semibold text-gray-800">
                                        <%= item.name %>
                                    </h3>

                                    <p class="text-gray-600">
                                        Price: ‚Çπ <%= item.price %>
                                    </p>

                                    <p class="text-gray-600">
                                        Quantity: <%= item.quantity %>
                                    </p>

                                    <% total +=item.price * item.quantity %>
                                </div>

                                <a href="/cart/remove/<%= item.productId %>"
                                    class="text-red-500 hover:underline font-medium">
                                    ‚ùå Remove
                                </a>

                            </div>

                            <% }) %>
                    </div>

                    <!-- Total Section -->
                    <% if (cart.length> 0) { %>
                        <div class="bg-white rounded-xl shadow p-6 mt-6 flex justify-between items-center">
                            <h2 class="text-2xl font-bold text-gray-800">
                                Total: ‚Çπ <%= total %>
                            </h2>

                            <a href="/checkout"
                                class="bg-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700 transition">
                                ‚úÖ Proceed to Checkout
                            </a>
                        </div>
                        <% } %>

    </div>

</body>

</html>