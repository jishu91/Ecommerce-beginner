<!DOCTYPE html>
<html lang="en">

<head>
    <title>Cart</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50 min-h-screen">

    <%- include('partials/navbar') %>

        <!-- Header -->
        <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <h1 class="text-3xl font-extrabold text-gray-800 mb-2">
                üõí Your Cart
            </h1>

            <div class="flex flex-wrap justify-between items-center gap-4 text-sm mb-6">
                <a href="/products" class="text-indigo-600 hover:text-indigo-700 transition font-medium">
                    ‚Üê Continue Shopping
                </a>

                <a href="/orders" class="text-indigo-600 hover:text-indigo-700 transition font-medium">
                    üì¶ View Orders
                </a>
            </div>

            <hr>
        </section>

        <!-- Cart Content -->
        <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pb-10">

            <% if (cart.length===0) { %>
                <div class="bg-white rounded-xl shadow-md p-10 text-center">
                    <div class="text-5xl mb-4">üõí</div>
                    <h2 class="text-xl font-semibold text-gray-700 mb-1">
                        Your cart is empty
                    </h2>
                    <p class="text-gray-500">
                        Looks like you haven‚Äôt added anything yet.
                    </p>
                </div>
                <% } %>

                    <% let total=0 %>

                        <div class="space-y-5">
                            <% cart.forEach(item=> { %>

                                <div
                                    class="bg-white rounded-2xl shadow-sm hover:shadow-lg transition p-6 flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">

                                    <!-- Product Info -->
                                    <div>
                                        <h3 class="text-xl font-bold text-gray-800 mb-1">
                                            <%= item.name %>
                                        </h3>

                                        <p class="text-gray-600 text-sm">
                                            Price: <span class="font-semibold">‚Çπ <%= item.price %></span>
                                        </p>

                                        <p class="text-gray-600 text-sm">
                                            Quantity: <span class="font-semibold">
                                                <%= item.quantity %>
                                            </span>
                                        </p>

                                        <% total +=item.price * item.quantity %>
                                    </div>

                                    <!-- Remove -->
                                    <a href="/cart/remove/<%= item.productId %>"
                                        class="text-red-500 hover:text-red-600 transition font-semibold">
                                        ‚ùå Remove
                                    </a>

                                </div>

                                <% }) %>
                        </div>

                        <!-- Total Section -->
                        <% if (cart.length> 0) { %>
                            <div
                                class="bg-white rounded-2xl shadow-md p-6 mt-8 flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">

                                <h2 class="text-2xl font-extrabold text-gray-800">
                                    Total: <span class="text-green-600">‚Çπ <%= total %></span>
                                </h2>

                                <a href="/checkout"
                                    class="bg-green-600 text-white px-8 py-3 rounded-xl font-semibold hover:bg-green-700 transition text-center">
                                    ‚úÖ Proceed to Checkout
                                </a>
                            </div>
                            <% } %>

        </section>

</body>

</html>